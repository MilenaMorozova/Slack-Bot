{
    "display_information": {
        "name": "Github News",
        "description": "PR info",
        "background_color": "#013c80"
    },
    "features": {
        "app_home": {
            "home_tab_enabled": true,
            "messages_tab_enabled": false,
            "messages_tab_read_only_enabled": false
        },
        "bot_user": {
            "display_name": "Github News",
            "always_online": false
        },
        "slash_commands": [
            {
                "command": "/hello-bolt-python",
                "url": "<host>/hello-bolt-python",
                "description": "hello!",
                "usage_hint": "nothing",
                "should_escape": false
            }
        ]
    },
    "oauth_config": {
        "scopes": {
            "bot": [
                "app_mentions:read",
                "chat:write",
                "commands",
                "users:read.email",
                "users:read"
            ]
        }
    },
    "settings": {
        "event_subscriptions": {
            "request_url": "<host>/slack/events",
            "bot_events": [
                "app_home_opened",
                "app_mention"
            ]
        },
        "org_deploy_enabled": false,
        "socket_mode_enabled": false,
        "token_rotation_enabled": false
    }
}